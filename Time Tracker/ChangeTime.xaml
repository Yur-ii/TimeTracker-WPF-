<Window x:Class="WpfApp1.ChangeTime"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ChangeTime" Height="130.5" Width="290.833"
        Background="#FF2E2B2B" BorderBrush="#FF8D8686" Foreground="#FF594B4B" ResizeMode="NoResize"
        >
    <Grid Margin="10,0,2,1" >
        <TextBox Name="InputTime" HorizontalAlignment="Left" Height="23" Margin="34,37,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" KeyDown="InputNumb"/>
        <Button Content="Change time" HorizontalAlignment="Left" Margin="178,37,0,0" VerticalAlignment="Top" Width="75" Click="AdditionTime"  Foreground="#FFCDC5C5" BorderBrush="#FFAAA3A3" Height="23">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF6A3D3D" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>


    </Grid>
</Window>
